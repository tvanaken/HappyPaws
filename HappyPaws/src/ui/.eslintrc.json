{
    "env": {
        "es2021": true,
        "node": true,
        "mocha": true
    },
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "quotes": [2, "double", { "avoidEscape": true }],
        "no-unused-vars": "off",
        "simple-import-sort/imports": "error",
        "simple-import-sort/exports": "error",
        "import/extensions": [0]
    },

    "plugins": ["simple-import-sort"],
    "settings": {}
}
